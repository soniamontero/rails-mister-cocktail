
<div class="content-dose">
<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <div class="form-inputs">
    <%= f.input :description, label: 'Whats inside your dose?' %>
    <%= f.input :ingredient_id, collection: @ingredients %>

</div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
