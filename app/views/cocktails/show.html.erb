<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.6) 50%), url('http://cdn.justalittlebitofbacon.com/wp-content/uploads/2016/11/pomegranate-prosecco-cocktail-2.jpg');">
  <div class="banner-content">
  <h1> <%= @cocktail.name %></h1>

  </div>
</div>

<div class="content">
  <h2>Recipe:</h2>
  <p class="small-link"> <%= link_to 'Add a New Dose', new_cocktail_dose_path(@cocktail) %></p>
  <% @cocktail.doses.each do |dose| %>
    <ul class="list">
      <li>
      <p><%= dose.description %><%= dose.ingredient.name %></p>
      <p><%= link_to 'Delete', dose_path(dose), method: :delete %></p>
      </li>
    </ul>
    <% end %>
  <%= link_to 'Back', root_path, class: 'btn back-btn' %>

</div>
