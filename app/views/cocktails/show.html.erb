<h1>Cocktail#show</h1>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %>
    <%= dose.ingredient.name %>
    <% end %>
  </p>

  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail)  %>
  <%= link_to 'Back', root_path %>
</p>


