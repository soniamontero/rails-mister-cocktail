
<div class="form">
 <%= simple_form_for(@cocktail) do |f| %>
    <div class="form-inputs">
      <%= f.input :name, label: 'Name of your cocktail' %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
 <% end %>
</div>

